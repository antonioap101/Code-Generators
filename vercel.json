{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r backend/requirements.txt --verbose"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)?",
      "destination": "backend/app.py"
    },
    {
      "source": "/assets/:path*",
      "destination": "frontend/assets/:path*"
    },
    {
      "source": "/favicon.ico",
      "destination": "frontend/favicon.ico"
    },
    {
      "source": "/:path*",
      "destination": "frontend/index.html"
    }
  ]
}
