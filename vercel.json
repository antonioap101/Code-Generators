{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r api/requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/convert/(.*)?",
      "dest": "api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
